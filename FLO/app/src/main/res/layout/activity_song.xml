<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <ImageButton
     android:id="@+id/song_setting_ib"
     android:layout_width="25dp"
     android:layout_height="25dp"
     android:layout_marginStart="20dp"
     android:layout_marginTop="20dp"
     android:background="@color/white"
     android:scaleType="fitXY"
     android:src="@drawable/btn_player_setting"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     />
 <ImageButton
     android:id="@+id/song_eq_ib"
     android:layout_width="25dp"
     android:layout_height="25dp"
     android:layout_marginStart="10dp"
     android:layout_marginTop="20dp"
     android:background="@color/white"
     android:scaleType="fitXY"
     android:src="@drawable/btn_player_eq_off"
     app:layout_constraintStart_toEndOf="@id/song_setting_ib"
     app:layout_constraintTop_toTopOf="parent"
     />
 <ImageButton
     android:id="@+id/song_down_ib"
     android:layout_width="25dp"
     android:layout_height="25dp"
     android:layout_marginEnd="20dp"
     android:layout_marginTop="20dp"
     android:background="@color/white"
     android:scaleType="fitXY"
     android:src="@drawable/nugu_btn_down"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     />
 <ImageButton
     android:id="@+id/song_player_more_ib"
     android:layout_width="25dp"
     android:layout_height="25dp"
     android:layout_marginEnd="20dp"
     android:layout_marginTop="20dp"
     android:background="@color/white"
     android:scaleType="fitXY"
     android:src="@drawable/btn_player_more"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@id/song_down_ib"
     />
 <TextView
     android:id="@+id/song_player_title_tv"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="제목"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@id/song_player_more_ib"
     android:textStyle="bold"
     android:textSize="20dp"
     android:textColor="@color/black"
     android:layout_marginTop="20dp"
  />
 <TextView
     android:id="@+id/song_player_singer_tv"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="가수"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@id/song_player_title_tv"
     android:textSize="15dp"
     android:layout_marginTop="10dp"
     />
 <ImageButton
     android:id="@+id/song_singer_more_ib"
     android:layout_width="18dp"
     android:layout_height="18dp"
     android:src="@drawable/btn_arrow_more"
     android:layout_marginTop="10dp"
     android:background="@color/white"
     android:scaleType="fitXY"
     app:layout_constraintBottom_toBottomOf="@id/song_player_singer_tv"
     app:layout_constraintStart_toEndOf="@id/song_player_singer_tv"
     app:layout_constraintTop_toBottomOf="@id/song_player_title_tv"
     />
 <androidx.cardview.widget.CardView
     android:id="@+id/song_album_picture_cv"
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:card_view="http://schemas.android.com/apk/res-auto"
     android:layout_width="200dp"
     android:layout_height="200dp"
     card_view:cardCornerRadius="10dp"
     app:layout_constraintTop_toBottomOf="@id/song_player_singer_tv"
     app:layout_constraintStart_toStartOf="parent"
     card_view:layout_constraintEnd_toEndOf="parent"
     android:layout_marginTop="20dp"
     >
  <com.makeramen.roundedimageview.RoundedImageView
      android:id="@+id/song_album_picture_rv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:src="@drawable/img_album_exp2"
      />
 </androidx.cardview.widget.CardView>
 <LinearLayout
     android:id="@+id/song_lyrics_ll"
     android:layout_width="100dp"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     app:layout_constraintTop_toBottomOf="@id/song_album_picture_cv"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     android:layout_marginTop="20dp"
     >
  <TextView
      android:id="@+id/song_lyrics01_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="나라는 꽃가루에"
      android:textStyle="bold"
      android:textColor="#A9A9A9"
      />
  <TextView
      android:id="@+id/song_lyrics02_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="눈이 따끔해 아야"
      android:textStyle="bold"
      android:textColor="#A9A9A9"
      />
 </LinearLayout>
 <ImageButton
     android:id="@+id/song_like_off_ib"
     android:layout_width="25dp"
     android:layout_height="25dp"
     android:layout_marginTop="20dp"
     android:background="@color/white"
     android:scaleType="fitXY"
     android:src="@drawable/ic_my_like_off"
     app:layout_constraintStart_toStartOf="@id/song_lyrics_ll"
     app:layout_constraintTop_toBottomOf="@id/song_lyrics_ll"
     />
 <ImageButton
     android:id="@+id/song_unlike_off_ib"
     android:layout_width="25dp"
     android:layout_height="25dp"
     android:layout_marginTop="20dp"
     android:background="@color/white"
     android:scaleType="fitXY"
     android:src="@drawable/btn_player_unlike_off"
     app:layout_constraintEnd_toEndOf="@id/song_lyrics_ll"
     app:layout_constraintTop_toBottomOf="@id/song_lyrics_ll"
     />
<SeekBar
    android:id="@+id/song_player_bar_sb"
    android:layout_width="match_parent"
    android:layout_height="10dp"
    app:layout_constraintTop_toBottomOf="@id/song_like_off_ib"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:paddingEnd="0dp"
    android:background="@null"
    android:paddingStart="0dp"
    android:progressBackgroundTint="#a8a8a8"
    android:progressTint="#3f3fff"
    android:progress="0"
    android:max="1000"
    android:thumbTint="#00ff0000"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
 <TextView
     android:id="@+id/song_start_time_tv"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@id/song_player_bar_sb"
     app:layout_constraintStart_toStartOf="@id/song_player_bar_sb"
     android:text="00:00"
     android:textColor="#2E64FE"
     android:layout_marginTop="10dp"
  />
 <TextView
     android:id="@+id/song_end_time_tv"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@id/song_player_bar_sb"
     app:layout_constraintEnd_toEndOf="@id/song_player_bar_sb"
     android:text="01:00"
     android:layout_marginTop="10dp"
     />
 <LinearLayout
     android:id="@+id/song_controller_ll"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@id/song_start_time_tv"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     android:gravity="center_vertical"
     android:layout_marginStart="20dp"
     android:layout_marginEnd="20dp"
     >

  <ImageView
      android:id="@+id/song_repeat_inactive_iv"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/nugu_btn_repeat_inactive"
      android:layout_marginEnd="20dp"
      />
  <ImageView
      android:id="@+id/song_previous_btn_iv"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/nugu_btn_skip_previous_32"
      android:layout_marginEnd="10dp"
      />
  <ImageView
      android:id="@+id/song_play_btn_iv"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/nugu_btn_play_32"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      />
  <ImageView
      android:id="@+id/song_pause_btn_iv"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/nugu_btn_pause_32"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:visibility="gone"
      />
  <ImageView
      android:id="@+id/song_next_btn_iv"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/nugu_btn_skip_next_32"
      android:layout_marginEnd="20dp"
      />
  <ImageView
      android:id="@+id/song_random_inactive_iv"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/nugu_btn_random_inactive"
      />
 </LinearLayout>
  <ImageView
      android:id="@+id/song_bottom_insta_iv"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/btn_actionbar_instagram"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/song_controller_ll"
      android:layout_marginTop="30dp"
      android:layout_marginStart="30dp"

      />
  <ImageView
      android:id="@+id/song_bottom_related_iv"
      android:layout_width="70dp"
      android:layout_height="40dp"
      android:src="@drawable/btn_player_related"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/song_controller_ll"
      android:layout_marginTop="30dp"
      />
 <ImageView
     android:id="@+id/song_bottom_list_iv"
     android:layout_width="40dp"
     android:layout_height="40dp"
     android:src="@drawable/btn_player_go_list"
     app:layout_constraintTop_toBottomOf="@id/song_controller_ll"
     android:layout_marginTop="30dp"
     app:layout_constraintEnd_toEndOf="parent"
     android:layout_marginEnd="20dp"
     />
</androidx.constraintlayout.widget.ConstraintLayout>

<!--invisible: view가 사라지긴 하지만 차지하고 있는 자리는 그대로 남겨둠-->
<!--gone: view가 사라지고 차지하고 있는 자리도 없어짐-->