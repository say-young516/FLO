<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/album_my_mix_cv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_height="40dp"
        card_view:cardCornerRadius="80dp"
        app:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        card_view:cardBackgroundColor="#FAFAFA"
        android:outlineSpotShadowColor="@color/white"
        card_view:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/album_my_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 취향 MIX"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/album_mix_off_btn_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_toggle_off"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="120dp"
            />
        <ImageView
            android:id="@+id/album_mix_on_btn_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_toggle_on"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="120dp"
            android:visibility="gone"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/album_all_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/album_my_mix_cv"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/album_select_icon_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/album_my_mix_cv"
            android:src="@drawable/btn_playlist_select_off"
            />
        <TextView
            android:id="@+id/album_all_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체선택"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/album_all_listen_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/album_my_mix_cv"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp">
        <ImageView
            android:id="@+id/album_listen_icon_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/album_my_mix_cv"
            android:src="@drawable/icon_browse_arrow_right"
            />
        <TextView
            android:id="@+id/album_all_listen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체듣기"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/album_track_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/album_all_listen_layout"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/album_list_item01_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/album_track_number01_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/album_main_title01_cv"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="15dp"
                card_view:cardCornerRadius="20dp"
                app:layout_constraintStart_toEndOf="@id/album_track_number01_tv"
                android:layout_gravity="center_horizontal"
                card_view:cardBackgroundColor="#2E64FE"
                android:outlineSpotShadowColor="@color/white"
                android:layout_marginStart="10dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="18dp"
                >
                <TextView
                    android:id="@+id/album_title_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TITLE"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/album_list_title01_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="라일락"
                app:layout_constraintStart_toEndOf="@id/album_main_title01_cv"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/album_list_singer01_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU)"
                app:layout_constraintTop_toBottomOf="@id/album_list_title01_tv"
                app:layout_constraintStart_toStartOf="@id/album_main_title01_cv"
                android:textSize="13dp"
                />
            <ImageView
                android:id="@+id/album_list_song_play01_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_miniplay_mvplay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/album_list_song_info01_iv"
                />
            <ImageView
                android:id="@+id/album_list_song_info01_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/album_list_item02_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_list_item01_layout"
            >
            <TextView
                android:id="@+id/album_track_number02_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/album_list_title02_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flu"
                app:layout_constraintStart_toEndOf="@id/album_track_number02_tv"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/album_list_singer02_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU)"
                app:layout_constraintTop_toBottomOf="@id/album_list_title02_tv"
                app:layout_constraintStart_toStartOf="@id/album_list_title02_tv"
                android:textSize="13dp"
                />
            <ImageView
                android:id="@+id/album_list_song_play02_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_miniplay_mvplay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/album_list_song_info02_iv"
                />
            <ImageView
                android:id="@+id/album_list_song_info02_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/album_list_item03_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_list_item02_layout"
            >
            <TextView
                android:id="@+id/album_track_number03_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/album_main_title02_cv"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="15dp"
                card_view:cardCornerRadius="20dp"
                app:layout_constraintStart_toEndOf="@id/album_track_number03_tv"
                android:layout_gravity="center_horizontal"
                card_view:cardBackgroundColor="#2E64FE"
                android:outlineSpotShadowColor="@color/white"
                android:layout_marginStart="10dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="18dp"
                >
                <TextView
                    android:id="@+id/album_title_text02_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TITLE"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/album_list_title03_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coin"
                app:layout_constraintStart_toEndOf="@id/album_main_title02_cv"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/album_list_singer03_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU)"
                app:layout_constraintTop_toBottomOf="@id/album_list_title03_tv"
                app:layout_constraintStart_toStartOf="@id/album_main_title02_cv"
                android:textSize="13dp"
                />
            <ImageView
                android:id="@+id/album_list_song_play03_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_miniplay_mvplay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/album_list_song_info03_iv"
                />
            <ImageView
                android:id="@+id/album_list_song_info03_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/album_list_item04_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_list_item03_layout"
            >
            <TextView
                android:id="@+id/album_track_number04_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/album_list_title04_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="봄 안녕"
                app:layout_constraintStart_toEndOf="@id/album_track_number04_tv"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/album_list_singer04_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU)"
                app:layout_constraintTop_toBottomOf="@id/album_list_title04_tv"
                app:layout_constraintStart_toStartOf="@id/album_list_title04_tv"
                android:textSize="13dp"
                />
            <ImageView
                android:id="@+id/album_list_song_play04_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_miniplay_mvplay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/album_list_song_info04_iv"
                />
            <ImageView
                android:id="@+id/album_list_song_info04_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>