<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/video_recent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신순"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/video_picture_cv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="280dp"
        android:layout_height="200dp"
        card_view:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        card_view:layout_constraintTop_toBottomOf="@id/video_recent_tv"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/album_main_picture_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/album_mv"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/video_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[MV] 라일락"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/video_picture_cv"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/video_picture_cv"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/video_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU) 2021.03.15"
        android:textSize="18sp"
        android:textColor="#D8D8D8"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/video_title_tv"
        app:layout_constraintStart_toStartOf="@id/video_picture_cv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>